@using Conit.WEB.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CONIT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary my-nav-bar">
        @Html.ActionLink("CONIT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Index" & ViewContext.RouteData.Values["Controller"].ToString() == "Home") ? "active" : "")">
                    @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Index" & ViewContext.RouteData.Values["Controller"].ToString() == "Companies") ? "active" : "")">
                    @Html.ActionLink("Companies", "Index", "Companies", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Index" & ViewContext.RouteData.Values["Controller"].ToString() == "Products") ? "active" : "")">
                    @Html.ActionLink("Products", "Index", "Products", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Index" & ViewContext.RouteData.Values["Controller"].ToString() == "Instructions") ? "active" : "")">
                    @Html.ActionLink("Instructions", "Index", "Instructions", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Index" & ViewContext.RouteData.Values["Controller"].ToString() == "Parts") ? "active" : "")">
                    @Html.ActionLink("Parts", "Index", "Parts", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "About" & ViewContext.RouteData.Values["Controller"].ToString() == "Home") ? "active" : "")">
                    @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Login" & ViewContext.RouteData.Values["Controller"].ToString() == "Account") ? "active" : "")">
                        @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "Register" & ViewContext.RouteData.Values["Controller"].ToString() == "Account") ? "active" : "")">
                        @Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    if (User.IsInRole(RoleName.Admin))
                    {
                        <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "GetUsers" & ViewContext.RouteData.Values["Controller"].ToString() == "Account") ? "active" : "")">
                            @Html.ActionLink("Administrating", "GetUsers", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                    }
                    @*if (User.IsInRole(RoleName.Admin) || User.IsInRole(RoleName.Manager))
                    {
                        <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "AllAgreements" & ViewContext.RouteData.Values["Controller"].ToString() == "Management") ? "active" : "")">
                            @Html.ActionLink("Management", "AllAgreements", "Management", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                    }
                    <li class="nav-item @((ViewContext.RouteData.Values["Action"].ToString() == "MyAgreements" & ViewContext.RouteData.Values["Controller"].ToString() == "Home") ? "active" : "")">
                        @Html.ActionLink("My rents", "MyAgreements", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>*@
                    <li class="nav-item">
                        @Html.ActionLink("Sign out", "Logout", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mykola Andrushchenko</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
