@model Conit.WEB.ViewModels.CompanyViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Name</h2>
<div class="form-row">
    <span id="output">
        @if (!Model.IsNewCreated)
        {
            <img src="@Model.PictureId" class="img-add-company" alt="@Model.Name" />
        }
    </span>
</div>
<div>
    <h4>@Model.Description</h4>
    <h5>Contact: @Model.ContactName</h5>
    <h5><tel>+@Model.PhoneNumber</tel></h5>
</div>
